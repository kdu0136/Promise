<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:id="@+id/textView_D_day"
                    android:text="D-day"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:gravity="left"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/textView_isStart"
                    android:text="미 출발"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="28sp"
                android:id="@+id/textView_content"
                android:hint="내용 없음"
                android:gravity="center" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_content">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:shrinkColumns="1">
                    <View android:layout_height="3dip" android:background="@color/colorPrimaryDark" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="50dp"
                        android:layout_marginStart="5dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_map_a1"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:id="@+id/imageView_arrive"
                                android:layout_margin="3dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_place">
                            <TextView
                                android:layout_marginStart="10dp"
                                android:text="약속 장소"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:textSize="15sp"
                                android:maxLength="20"
                                android:id="@+id/textView_place"/>
                        </LinearLayout>
                    </TableRow>
                    <View android:layout_height="1dip" android:background="@color/colorPrimaryDark" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="50dp"
                        android:layout_marginStart="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_calendar1"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:id="@+id/imageView_date"
                            android:layout_margin="3dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_date">
                            <TextView
                                android:layout_marginStart="10dp"
                                android:text="약속 날짜"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:textSize="15sp"
                                android:maxLength="20"
                                android:id="@+id/textView_date"/>
                        </LinearLayout>
                    </TableRow>
                    <View android:layout_height="1dip" android:background="@color/colorPrimaryDark" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="50dp"
                        android:layout_marginStart="5dp" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_clock1"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:id="@+id/imageView_time"
                            android:layout_margin="3dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_time">
                            <TextView
                                android:layout_marginStart="10dp"
                                android:text="약속 시간"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:textSize="15sp"
                                android:maxLength="20"
                                android:id="@+id/textView_time"/>
                        </LinearLayout>
                    </TableRow>
                    <View android:layout_height="1dip" android:background="@color/colorPrimaryDark" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="50dp"
                        android:layout_marginStart="5dp" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_map_s1"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:id="@+id/imageView_start"
                            android:layout_margin="3dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_start">
                            <TextView
                                android:layout_marginStart="10dp"
                                android:text="출발 장소"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:textSize="15sp"
                                android:maxLength="20"
                                android:id="@+id/textView_start"/>
                        </LinearLayout>
                    </TableRow>
                    <View android:layout_height="1dip" android:background="@color/colorPrimaryDark" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="50dp"
                        android:layout_marginStart="5dp" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_social2"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:id="@+id/imageView_social"
                            android:layout_margin="3dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_social">
                            <TextView
                                android:layout_marginStart="10dp"
                                android:text="약속 친구"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:textSize="15sp"
                                android:maxLength="20"
                                android:id="@+id/textView_social"/>
                        </LinearLayout>
                    </TableRow>
                    <View android:layout_height="3dip" android:background="@color/colorPrimaryDark" />
                </TableLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/map_shape"
                android:id="@+id/layout_map">

                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

                <LinearLayout
                    android:id="@+id/layout_route_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/map_view"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/ic_route_info"
                        android:layout_marginBottom="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        android:text="경로 정보"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/layout_alram"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/imageView_alram"
            android:background="@drawable/ic_alarm_on"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_alram"
            android:text="60분 전"/>
    </LinearLayout>

</RelativeLayout>
