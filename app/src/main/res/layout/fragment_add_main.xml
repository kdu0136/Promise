<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="28sp"
        android:id="@+id/editText_content"
        android:hint="무슨 약속이에요?"
        android:gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/layout_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:shrinkColumns="1">
            <View android:layout_height="3dip" android:background="@color/colorPrimaryDark" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:minHeight="50dp" >
                <ImageView
                    android:id="@+id/imageView_arrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_map_a"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:layout_margin="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_place">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:text="약속 장소"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:textSize="15sp"
                        android:maxLength="20"
                        android:id="@+id/textView_place"/>
                </LinearLayout>
            </TableRow>
            <View android:layout_height="1dip" android:background="@color/colorPrimaryDark" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_calendar"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:id="@+id/imageView_date"
                    android:layout_margin="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_date">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:text="약속 날짜"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:textSize="15sp"
                        android:maxLength="20"
                        android:id="@+id/textView_date"/>
                </LinearLayout>
            </TableRow>
            <View android:layout_height="1dip" android:background="@color/colorPrimaryDark" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_clock"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:id="@+id/imageView_time"
                    android:layout_margin="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_time">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:text="약속 시간"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:textSize="15sp"
                        android:maxLength="20"
                        android:id="@+id/textView_time"/>
                </LinearLayout>
            </TableRow>
            <View android:layout_height="1dip" android:background="@color/colorPrimaryDark" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:id="@+id/imageView_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_map_s"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:layout_margin="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_start">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:text="출발 장소"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:textSize="15sp"
                        android:maxLength="20"
                        android:id="@+id/textView_start"/>
                </LinearLayout>
            </TableRow>
            <View android:layout_height="1dip" android:background="@color/colorPrimaryDark" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:id="@+id/imageView_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_social2"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:layout_margin="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_social">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:text="친구 등록하기"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:textSize="15sp"
                        android:maxLength="20"
                        android:id="@+id/textView_social"/>
                </LinearLayout>
            </TableRow>
            <View android:layout_height="3dip" android:background="@color/colorPrimaryDark" />
        </TableLayout>
    </FrameLayout>
</LinearLayout>