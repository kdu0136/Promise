<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginTop="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="#FFFFFFFF"
    android:id="@+id/layout_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_info1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="약 30분"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:id="@+id/textView_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="10.8km"
            android:layout_alignBottom="@+id/textView_time"
            android:layout_toEndOf="@+id/textView_time"
            android:id="@+id/textView_distance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="도보 12분"
            android:layout_alignBottom="@+id/textView_time"
            android:layout_toEndOf="@+id/textView_distance"
            android:id="@+id/textView_walkTime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="카드 1200원"
            android:layout_alignBottom="@+id/textView_time"
            android:layout_toEndOf="@+id/textView_walkTime"
            android:id="@+id/textView_price" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/textView_time"
            android:orientation="horizontal"
            android:id="@+id/layout_route_line">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/layout_route_line"
            android:orientation="vertical"
            android:id="@+id/layout_route">
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>