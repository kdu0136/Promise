<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kimdongun.promise.Promise.ContentActivity"
    tools:showIn="@layout/activity_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:id="@+id/textView_D_day"
            android:text="D-day"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:gravity="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:id="@+id/textView_content"
            android:hint="무슨 약속이에요?"
            android:gravity="center" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/layout_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:shrinkColumns="1">
                <View android:layout_height="3dip" android:background="#FF909090" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:layout_gravity="center"
                            android:text="도착"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_map1"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:id="@+id/imageView_arrive"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/layout_place">
                        <TextView
                            android:layout_marginStart="10dp"
                            android:text="약속 장소"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:textSize="15sp"
                            android:maxLength="20"
                            android:id="@+id/textView_place"/>
                    </LinearLayout>
                </TableRow>
                <View android:layout_height="1dip" android:background="#FF909090" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_calendar1"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:id="@+id/imageView_date"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/layout_date">
                        <TextView
                            android:layout_marginStart="10dp"
                            android:text="약속 날짜"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:textSize="15sp"
                            android:maxLength="20"
                            android:id="@+id/textView_date"/>
                    </LinearLayout>
                </TableRow>
                <View android:layout_height="1dip" android:background="#FF909090" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_clock1"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:id="@+id/imageView_time"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/layout_time">
                        <TextView
                            android:layout_marginStart="10dp"
                            android:text="약속 시간"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:textSize="15sp"
                            android:maxLength="20"
                            android:id="@+id/textView_time"/>
                    </LinearLayout>
                </TableRow>
                <View android:layout_height="1dip" android:background="#FF909090" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:layout_gravity="center"
                            android:text="출발"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_map2"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:id="@+id/imageView_start"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/layout_start">
                        <TextView
                            android:layout_marginStart="10dp"
                            android:text="출발 장소"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:textSize="15sp"
                            android:maxLength="20"
                            android:id="@+id/textView_start"/>
                    </LinearLayout>
                </TableRow>
                <View android:layout_height="3dip" android:background="#FF909090" />
            </TableLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/map_shape">

            <RelativeLayout
                android:id="@+id/map_view"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map_view"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:id="@+id/layout_route_info">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_route_info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="경로 정보"/>
            </LinearLayout>

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:stretchColumns="1"
            android:shrinkColumns="1">
            <View android:layout_height="3dip" android:background="#FF909090" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_social2"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:id="@+id/imageView_social"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_social">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:text="약속 친구"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:textSize="15sp"
                        android:maxLength="20"
                        android:id="@+id/textView_social"/>
                </LinearLayout>
            </TableRow>
            <View android:layout_height="3dip" android:background="#FF909090" />
        </TableLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
